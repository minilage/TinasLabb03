<UserControl x:Class="TinasLabb03.View.PlayerView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TinasLabb03.Converters"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:viewmodel="clr-namespace:TinasLabb03.ViewModel" d:DataContext="{d:DesignInstance Type=viewmodel:PlayerViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <UserControl.LayoutTransform>
        <ScaleTransform ScaleX="{Binding ScaleFactor}" ScaleY="{Binding ScaleFactor}" />
    </UserControl.LayoutTransform>

    <UserControl.Resources>
        <local:BoolToColorConverter x:Key="BoolToColorConverter" />
        <Style TargetType="{x:Type Button}">
            <Setter Property="Background" Value="Green" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border
                            Background="{TemplateBinding Background}"
                            BorderBrush="Black"
                            BorderThickness="1">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="Red" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid Background="#FF97AD96">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  Timer  -->
        <TextBlock
            Grid.Row="0"
            Margin="10"
            HorizontalAlignment="Center"
            FontSize="24"
            FontWeight="Bold"
            Foreground="Black"
            Text="{Binding TimeLeft}" />

        <!--  Frågetext  -->
        <StackPanel
            Grid.Row="1"
            Margin="20"
            VerticalAlignment="Top">
            <TextBlock
                Margin="0,0,0,10"
                FontSize="{Binding QuestionFontSize}"
                Foreground="Black"
                Text="{Binding CurrentQuestion}"
                TextAlignment="Center"
                TextWrapping="Wrap" />
            <TextBlock
                FontSize="18"
                FontWeight="Bold"
                Foreground="Black"
                Text="{Binding QuestionInfo}"
                TextAlignment="Center" />
        </StackPanel>

        <!--  Svarsalternativ  -->
        <ItemsControl Grid.Row="2" ItemsSource="{Binding Options}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid
                        Margin="20"
                        Columns="2"
                        Rows="2" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Button
                        Height="{Binding DataContext.ButtonHeight, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                        Margin="10"
                        Padding="10"
                        BorderThickness="0"
                        Command="{Binding DataContext.AnswerCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                        CommandParameter="{Binding .}"
                        Content="{Binding Text}"
                        IsEnabled="{Binding CanGuess}"
                        FontSize="{Binding DataContext.ButtonFontSize, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                        Foreground="Black">
                        <Button.Background>
                            <MultiBinding Converter="{StaticResource BoolToColorConverter}" FallbackValue="LightGray">
                                <Binding Path="IsSelected" />
                                <Binding Path="IsCorrect" />
                                <Binding Path="IsWrong" />
                            </MultiBinding>
                        </Button.Background>
                    </Button>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <!--  Popup vid timeout  -->
        <Popup
            IsOpen="{Binding IsTimeOut, Mode=OneWay}"
            Placement="Center"
            StaysOpen="False">
            <Border
                Padding="20"
                Background="#444444"
                CornerRadius="10">
                <StackPanel>
                    <TextBlock
                        Margin="10"
                        FontSize="24"
                        FontWeight="Bold"
                        Foreground="White"
                        Text="Time's up!"
                        TextAlignment="Center" />
                    <StackPanel
                        Margin="10"
                        HorizontalAlignment="Center"
                        Orientation="Horizontal">
                        <Button
                            Width="100"
                            Margin="5"
                            Padding="5"
                            Background="#4CAF50"
                            BorderThickness="0"
                            Command="{Binding ContinueCommand}"
                            Content="Continue"
                            FontSize="16"
                            Foreground="White" />
                        <Button
                            Width="100"
                            Margin="5"
                            Padding="5"
                            Background="#F44336"
                            BorderThickness="0"
                            Command="{Binding QuitCommand}"
                            Content="Quit"
                            FontSize="16"
                            Foreground="White" />
                    </StackPanel>
                </StackPanel>
            </Border>
        </Popup>
    </Grid>
</UserControl>
